<style>
    .chat_user_name{
        line-height: 35px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        display: block;
        color: #121219;
        font-weight: 100;
    }

    .chat_title{
        color: #22191c;
        width: 100%;
        padding: 10px 10px 7px;
        margin-bottom: 5px;
        background: #f6f6f6;
        font-weight: 700;
        position: relative;
        border-bottom: 1px solid silver;
    }
    #users-chat > .online-users .pull-right{
        margin-right: 6px!important;
    }

    .user_status_active{
        background-color: white;
        -webkit-animation-name: example; /* Safari 4.0 - 8.0 */
        -webkit-animation-duration: 1s; /* Safari 4.0 - 8.0 */
        animation-name: example;
        animation-duration: 0.5s;
        transition: 1s;
        width: 10px;
        height: 10px;
        border: 1px solid green;
        border-radius: 50%;
        animation-iteration-count: infinite;
        position: relative;
        top: 2px;
    }


    .user_status_inactive{
        width: 10px;
        height: 10px;
        border: 1px solid silver;
        border-radius: 50%;
        animation-iteration-count: infinite;
        position: relative;
        background: #ecebeb;
        top: 2px;
    }




    /* Safari 4.0 - 8.0 */
    @-webkit-keyframes example {
        from {background-color: green;}
        to {background-color: white;}
    }

    /* Standard syntax */
    @keyframes example {
        from {background-color: green;}
        to {background-color: white;}
    }
    .chat_title_text{
        color: #929292;
    }
    .chat_title_text:hover{
        color: black;
        cursor: pointer;
    }
</style>

<div class="extra">
    <div class="chat-all-container">
        <div class="chat-tab"></div>
        <div class="chat-container full" style="">
            <div  class="chat_title" >
                <span class="chat_title_text" >Chat</span>
            </div>
            <div class="chat-status">
			<span class="pointer" style="margin-right: 5px;" onclick="Wo_CreateGChat(event)">
				<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                     stroke-linecap="round" stroke-linejoin="round" class="feather feather-user-plus">
                    <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                    <circle cx="8.5" cy="7" r="4"></circle>
                    <line x1="20" y1="8" x2="20" y2="14"></line>
